{
  "env": {
      "es2021": true,
      "node": true,
      "mocha": true
  },
  "extends": [
      "airbnb-base"
  ],
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "rules": {
      "semi": "error",
      "no-console": "off",
      "no-underscore-dangle": "off",
      "import/extensions": [
        "error",
        {
            "js": "ignorePackages"
        }
      ],
      "max-len": ["error", { "code": 100 }]
  }
}
